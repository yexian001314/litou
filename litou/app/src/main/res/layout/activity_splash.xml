<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bg_splash"
    tools:context="com.shqj.litouwang.activity.SplashActivity">

    <ImageView
        android:id="@+id/iv_splash_root"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@mipmap/bg_splash" />

    <com.sleep.commonlib.view.CountDownView
        android:id="@+id/tv_skip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dp_12"
        android:layout_marginTop="@dimen/dp_30"
        android:padding="@dimen/dp_10"
        android:text="跳过 3"
        android:textColor="@color/color_4b4b4b"
        android:visibility="invisible" />

</RelativeLayout>
