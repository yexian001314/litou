<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:background="@color/background_color"
    tools:context="com.shqj.mine.activity.SetTradingPwdActivity">

    <TextView
        android:id="@+id/tv_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp_16"
        android:gravity="center"
        android:text="@string/set_trading_pwd_make_money_safe"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_46"
        android:layout_marginTop="@dimen/dp_18"
        android:background="@color/white">
        <TextView
            android:id="@+id/tv_set_pwd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_16"
            android:text="@string/set_pwd"
            android:textColor="#333333"
            android:textSize="@dimen/sp_14"/>
        <EditText
            android:id="@+id/et_set_pwd"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:maxLines="1"
            android:background="@null"
            android:textColorHint="@color/color_dedede"
            android:layout_alignBaseline="@+id/tv_set_pwd"
            android:layout_marginLeft="@dimen/dp_14"
            android:layout_marginRight="@dimen/dp_48"
            android:layout_toRightOf="@id/tv_set_pwd"
            android:hint="@string/please_input_pwd"
            android:inputType="numberPassword"
            android:maxLength="6"
            android:textSize="@dimen/sp_14"/>

        <CheckBox
            android:id="@+id/cb_visible_set"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@null"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:background="@drawable/selector_eyes"
            android:layout_marginRight="@dimen/dp_18"
        />
    </RelativeLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@color/line_color"
    />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_46"
        android:background="@color/white">
        <TextView
            android:id="@+id/tv_comfirm_pwd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_16"
            android:text="@string/confirm_pwd"
            android:textColor="#333333"
            android:textSize="@dimen/sp_14"/>
        <EditText
            android:id="@+id/et_set_pwd_again"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:maxLines="1"
            android:background="@null"
            android:textColorHint="@color/color_dedede"
            android:layout_alignBaseline="@+id/tv_comfirm_pwd"
            android:layout_marginLeft="@dimen/dp_14"
            android:layout_marginRight="@dimen/dp_48"
            android:layout_toRightOf="@id/tv_comfirm_pwd"
            android:hint="@string/please_input_set_pwd_again"
            android:inputType="numberPassword"
            android:maxLength="6"
            android:textSize="@dimen/sp_14"/>

        <CheckBox
            android:id="@+id/cb_visible_confirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@null"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:background="@drawable/selector_eyes"
            android:layout_marginRight="@dimen/dp_18"/>
    </RelativeLayout>


    <TextView
        android:id="@+id/tv_sure"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_46"
        android:layout_marginLeft="@dimen/dp_14"
        android:layout_marginRight="@dimen/dp_14"
        android:layout_marginTop="@dimen/dp_20"
        android:text="@string/ensure"
        android:background="@drawable/shape_dark_corner3"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_18"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_16"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="6dp"
            android:layout_height="6dp"
            android:src="@drawable/shape_solid_red"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_4"
            android:gravity="center"
            android:textSize="@dimen/sp_11"
            android:text="支付密码将用于以后进行购买理财产品时验证登录"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_16"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="6dp"
            android:layout_height="6dp"
            android:src="@drawable/shape_solid_red"
            android:visibility="invisible"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_4"
            android:gravity="center"
            android:textSize="@dimen/sp_11"
            android:text="只需要输入手机号码及登录密码"/>
    </LinearLayout>

</LinearLayout>
