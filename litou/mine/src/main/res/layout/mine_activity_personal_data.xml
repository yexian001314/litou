<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="@color/background_color"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    tools:context="com.shqj.mine.activity.PersonalDataActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background_color"
        android:scrollbars="none">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <View
                android:id="@+id/v_anchor"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_100"
                android:background="@color/background_color" />

            <LinearLayout
                android:id="@+id/ll_content_anchor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical"
                app:layout_constraintTop_toBottomOf="@id/v_anchor"

                >

                <LinearLayout
                    android:id="@+id/ll_certification"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_48"
                    android:layout_marginLeft="@dimen/dp_14"
                    android:layout_marginRight="@dimen/dp_14"
                    android:layout_marginTop="@dimen/dp_70"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/verify_real_name"
                        android:textColor="@color/color_202020"
                        android:textSize="@dimen/sp_13" />

                    <TextView
                        android:id="@+id/tv_certification_statue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="去认证"
                        android:textColor="@color/colorAccent"
                        android:textSize="@dimen/sp_13" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/px_1"
                    android:layout_marginLeft="@dimen/dp_12"
                    android:layout_marginRight="@dimen/dp_12"
                    android:background="@color/color_a9a9a9"
                    app:layout_constraintTop_toBottomOf="@id/ll_certification" />

                <LinearLayout
                    android:id="@+id/ll_bank_bind"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_48"
                    android:layout_marginTop="@dimen/dp_1"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/dp_14"
                    android:paddingRight="@dimen/dp_14"
                    app:layout_constraintTop_toBottomOf="@id/ll_certification">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="@string/bank_card"
                        android:textColor="@color/color_202020"
                        android:textSize="@dimen/sp_14" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_bank_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:layout_marginLeft="@dimen/dp_16"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:text="中国银行"
                            android:textColor="@color/color_222222"
                            android:textSize="@dimen/sp_14" />

                        <TextView
                            android:id="@+id/tv_bank_card_num"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:layout_marginLeft="@dimen/dp_16"
                            android:text="123*******1193"
                            android:textColor="@color/color_222222"
                            android:textSize="@dimen/sp_14" />
                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/px_1"
                    android:layout_marginLeft="@dimen/dp_12"
                    android:layout_marginRight="@dimen/dp_12"
                    android:background="@color/color_a9a9a9"
                    app:layout_constraintTop_toBottomOf="@id/ll_bank_bind" />

                <LinearLayout
                    android:id="@+id/ll_phone_num"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_48"
                    android:layout_marginTop="@dimen/dp_1"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/dp_14"
                    android:paddingRight="@dimen/dp_14"
                    app:layout_constraintTop_toBottomOf="@id/ll_bank_bind">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/personal_date_phopne_num"
                        android:textColor="@color/color_202020"
                        android:textSize="@dimen/sp_13" />

                    <TextView
                        android:id="@+id/tv_phone_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/color_222222"
                        android:textSize="@dimen/sp_13"
                        tools:text="176****1993" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/px_1"
                    android:layout_marginLeft="@dimen/dp_12"
                    android:layout_marginRight="@dimen/dp_12"
                    android:background="@color/color_a9a9a9"
                    app:layout_constraintTop_toBottomOf="@id/ll_bank_bind" />

                <LinearLayout
                    android:id="@+id/ll_select_address"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_48"
                    android:layout_marginTop="@dimen/dp_10"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/dp_14"
                    android:paddingRight="@dimen/dp_14"
                    app:layout_constraintTop_toBottomOf="@id/ll_phone_num">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/detail_address"
                        android:textColor="@color/color_202020"
                        android:textSize="@dimen/sp_13" />

                    <TextView
                        android:id="@+id/tv_choose_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="请选择所在地区 >"
                        android:textColor="@color/color_222222"
                        android:textSize="@dimen/sp_13" />

                    <ImageView
                        android:id="@+id/iv_right_black_arrow"
                        android:layout_width="@dimen/dp_6"
                        android:layout_height="@dimen/dp_11"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:src="@mipmap/icon_black_right_arrow"
                        android:visibility="gone" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/px_1"
                    android:layout_marginLeft="@dimen/dp_12"
                    android:layout_marginRight="@dimen/dp_12"
                    android:background="@color/color_a9a9a9"
                    app:layout_constraintTop_toBottomOf="@id/ll_phone_num" />

                <EditText
                    android:id="@+id/et_input_street"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_100"
                    android:background="@null"
                    android:gravity="top"
                    android:hint="请填写详细的地址，街道门牌号等信息，不少于5字"
                    android:paddingLeft="@dimen/dp_14"
                    android:paddingRight="@dimen/dp_14"
                    android:paddingTop="@dimen/dp_15"
                    android:textColor="@color/color_222222"
                    android:textColorHint="@color/color_c0bebe"
                    android:textCursorDrawable="@null"
                    android:textSize="@dimen/sp_13"
                    app:layout_constraintTop_toBottomOf="@id/ll_select_address" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_anchor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_20"
                android:gravity="center"
                android:text="@string/personal_date_text"
                android:textColor="@color/color_4c4c4c"
                android:textSize="@dimen/sp_9"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ll_content_anchor" />

            <TextView
                android:id="@+id/tv_save_address"
                android:layout_width="@dimen/dp_270"
                android:layout_height="@dimen/dp_42"
                android:layout_marginBottom="@dimen/dp_60"
                android:layout_marginTop="@dimen/dp_22"
                android:background="@drawable/shape_accent_corner"
                android:gravity="center"
                android:text="@string/save"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_15"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_anchor" />

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/iv_user_avatar"
                android:layout_width="@dimen/dp_90"
                android:layout_height="@dimen/dp_90"
                android:layout_marginTop="@dimen/dp_55"
                android:src="@mipmap/user_default"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="parent"
                app:riv_corner_radius="50dp" />

        </android.support.constraint.ConstraintLayout>
    </ScrollView>

</LinearLayout>
