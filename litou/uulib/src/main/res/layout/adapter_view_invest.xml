<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="174dp">

    <TextView
        android:id="@+id/tv_project_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_15"
        android:text="新手专享"
        android:textColor="@color/black"
        android:textSize="@dimen/sp_13" />

    <TextView
        android:id="@+id/tv_subject_type"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_15"
        android:layout_marginLeft="@dimen/dp_13"
        android:visibility="invisible"
        android:layout_marginTop="@dimen/dp_16"
        android:layout_toRightOf="@id/tv_project_name"
        android:background="@mipmap/new_profess"
        android:gravity="center"
        android:paddingLeft="@dimen/dp_10"
        android:paddingRight="@dimen/dp_10"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_9" />
    <View
        android:layout_marginTop="12dp"
        android:layout_below="@+id/tv_subject_type"
        android:id="@+id/view_dash_line"
        android:layout_width="match_parent"
        android:background="@drawable/shape_dash_line"
        android:layout_height="2dp"/>
    <TextView
        android:id="@+id/arrow1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="46dp"
        android:text="预期年化收益率"
        android:textColor="@color/color_4c4c4c"
        android:textSize="@dimen/sp_12" />

    <TextView
        android:id="@+id/tv_earning_rate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/arrow1"
        android:layout_marginBottom="@dimen/dp_10"
        android:gravity="bottom"
        android:text="18%"
        android:textColor="@color/colorAccent"
        android:textSize="@dimen/sp_28" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/dp_14"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ProgressBar
            android:id="@+id/pb_invest_progess"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:layout_weight="1"
            android:indeterminateDrawable="@drawable/progess_horizontal"
            android:progress="0" />

        <TextView
            android:id="@+id/tv_invest_rate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:textColor="@color/color_969696"
            android:textSize="10sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="60dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_invest_period"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="限期15天"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_13" />

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" | 100元起投"
                android:textColor="@color/color_969696"
                android:textSize="@dimen/sp_13" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_pay_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="先本后息"
                android:textColor="@color/color_676767"
                android:textSize="@dimen/sp_12" />

        </LinearLayout>
    </LinearLayout>

</RelativeLayout>