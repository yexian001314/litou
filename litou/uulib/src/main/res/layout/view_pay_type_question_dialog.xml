<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    xmlns:app="http://schemas.android.com/apk/res-auto"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:background="@android:color/white"
                                    android:orientation="vertical"
                                    app:cardCornerRadius="@dimen/dp_5"
>

    <LinearLayout android:layout_width="@dimen/dp_276"
                  android:layout_height="wrap_content"
                  android:orientation="vertical"
    >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_21"
            android:gravity="center_horizontal"
            android:text="还款方式"
            android:textColor="@color/text_black"
            android:textSize="@dimen/sp_15"
        />

        <LinearLayout android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_gravity="center_horizontal"
                      android:layout_marginTop="@dimen/dp_20"
                      android:orientation="horizontal"
        >
            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="先息后本："
                      android:textColor="@color/black"
                      android:textSize="@dimen/sp_13"
            />
            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="按月还息，到期后一次性还本"
                      android:textColor="@color/color_969696"
                      android:textSize="@dimen/sp_13"
            />
        </LinearLayout>

        <LinearLayout android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_gravity="center_horizontal"
                      android:layout_marginTop="@dimen/dp_10"
                      android:orientation="horizontal"
        >
            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="一次性还本付息："
                      android:textColor="@color/black"
                      android:textSize="@dimen/sp_13"
            />
            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="到期后一次性归还本息"
                      android:textColor="@color/color_969696"
                      android:textSize="@dimen/sp_13"
            />
        </LinearLayout>

        <View android:id="@+id/common_dialog_line"
              android:layout_width="match_parent"
              android:layout_height="@dimen/px_1"
              android:layout_marginTop="@dimen/dp_20"
              android:background="@color/color_969696"
        />

        <TextView
            android:id="@+id/tv_confirm"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_45"
            android:gravity="center"
            android:text="知道了"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/sp_13"
        />
    </LinearLayout>
</android.support.v7.widget.CardView>