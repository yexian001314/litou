<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl_root_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/dp_12"
    android:layout_marginRight="@dimen/dp_12"
    android:layout_marginTop="@dimen/dp_10"
    android:background="@mipmap/red_envelope_available">

    <LinearLayout
        android:id="@+id/rl_bg"
        android:layout_width="match_parent"
        android:layout_height="136dp"
        android:orientation="vertical"
        android:text="@string/novice_envelopes">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="88dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:paddingLeft="14dp"
                android:paddingTop="14dp">

                <TextView
                    android:id="@+id/tv_envelopes_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:text="20"
                    android:textColor="@color/text_black"
                    android:textSize="@dimen/sp_24"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_envelopes_use_condition"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:text="投资额≥2，000元"
                    android:textColor="@color/color_676767"
                    android:textSize="@dimen/sp_12" />
            </LinearLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="40dp"
                android:layout_gravity="center_vertical"
                android:background="@color/background_color" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingLeft="35dp"
                android:paddingTop="20dp">

                <TextView
                    android:id="@+id/tv_envelopes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="@string/novice_envelopes"
                    android:textColor="@color/color_676767"
                    android:textSize="@dimen/sp_16" />

                <TextView
                    android:id="@+id/tv_time_limit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/color_676767"
                    android:textSize="@dimen/sp_12"
                    android:visibility="invisible"
                    tools:text="适用于30天以上的标" />
            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/background_color" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="14dp"
            android:paddingRight="14dp">

            <TextView
                android:id="@+id/tv_available_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/color_676767"
                android:textSize="@dimen/sp_12"
                tools:text="有效期至2016.07.22" />

            <TextView
                android:id="@+id/tv_envelopes_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="未使用"
                android:textColor="@color/color_676767"
                android:textSize="@dimen/sp_16" />
        </LinearLayout>
    </LinearLayout>


    <TextView
        android:id="@+id/tv_not_choose_red_packet"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_106"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:text="暂不使用红包"
        android:textColor="@color/color_525252"
        android:textStyle="bold"
        android:visibility="invisible" />
</RelativeLayout>