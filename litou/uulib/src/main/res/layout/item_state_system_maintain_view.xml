<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:backgroundTint="@color/white"
                android:orientation="vertical">
    <RelativeLayout

        android:id="@+id/emptyStateRelativeLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/iv_empty"
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_150"
            android:src="@mipmap/error_system_maintain"/>

        <TextView
            android:id="@+id/tv_empty_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_empty"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="服务器正在升级"
            android:textColor="#567A92"
            android:textSize="16sp"/>
        <TextView
            android:id="@+id/retry_view"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_below="@id/tv_empty_title"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="@drawable/shape_accent_corner3"
            android:gravity="center"
            android:text="重新加载"
            android:textColor="#ffffff"
            android:textSize="16sp"/>
    </RelativeLayout>
</RelativeLayout>