<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl_root_view"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_106"
    android:layout_marginLeft="@dimen/dp_12"
    android:layout_marginRight="@dimen/dp_12"
    android:layout_marginTop="@dimen/dp_15"
    android:background="@mipmap/bg_ticket_available">

    <RelativeLayout
        android:id="@+id/rl_bg"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_106">

        <TextView
            android:id="@+id/tv_envelopes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_18"
            android:text="@string/novice_envelopes"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_16" />

        <TextView
            android:id="@+id/tv_envelopes_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/tv_envelopes"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/dp_16"
            android:text="¥20"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_18"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_envelopes_use_condition"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/tv_envelopes_amount"
            android:layout_below="@id/tv_envelopes_amount"
            android:layout_marginTop="@dimen/dp_6"
            android:text="投资额≥2，000元"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_12" />

        <TextView
            android:id="@+id/tv_time_limit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/tv_envelopes_use_condition"
            android:layout_alignRight="@id/tv_envelopes"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_12"
            android:visibility="invisible"
            tools:text="适用于30天以上的标" />

        <TextView
            android:id="@+id/tv_available_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/tv_envelopes_use_condition"
            android:layout_below="@id/tv_envelopes_use_condition"
            android:layout_marginTop="@dimen/dp_6"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_12"
            tools:text="有效期至2016.07.22" />

        <TextView
            android:id="@+id/tv_envelopes_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/tv_envelopes"
            android:layout_below="@+id/tv_envelopes_use_condition"
            android:layout_marginTop="@dimen/dp_8"
            android:text="未使用"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_16" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_not_choose_red_packet"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_106"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:text="暂不使用加息券"
        android:textColor="@color/color_525252"
        android:textStyle="bold"
        android:visibility="invisible" />
</RelativeLayout>