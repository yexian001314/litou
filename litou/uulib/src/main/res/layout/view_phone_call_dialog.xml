<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="vertical"
    app:cardCornerRadius="@dimen/dp_5">

    <RelativeLayout
        android:layout_width="@dimen/dp_276"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_anchor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_16"
            android:text="拨打"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_15" />

        <TextView
            android:id="@+id/tv_anchor1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_anchor"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_13"
            android:gravity="center"
            android:lineSpacingExtra="@dimen/dp_10"
            android:text="400-6688-956"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_15" />

        <TextView
            android:id="@+id/tv_anchor2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_anchor1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_16"
            android:gravity="center"
            android:lineSpacingExtra="@dimen/dp_5"
            android:text="工作日：09:00-21:00 \n周末：09:00-17:30"
            android:textColor="@color/color_969696"
            android:textSize="@dimen/sp_12" />

        <View
            android:id="@+id/tv_anchor3"
            android:layout_width="match_parent"
            android:layout_height="@dimen/px_1"
            android:layout_below="@id/tv_anchor2"
            android:layout_marginTop="@dimen/dp_15"
            android:background="@color/color_969696" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_45"
            android:layout_below="@id/tv_anchor3"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_cancel"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="取消"
                android:textColor="#999999"
                android:textSize="@dimen/sp_13" />

            <View
                android:layout_width="@dimen/px_1"
                android:layout_height="match_parent"
                android:background="@color/color_969696" />

            <TextView
                android:id="@+id/tv_confirm"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="确定"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/sp_13" />
        </LinearLayout>
    </RelativeLayout>

</android.support.v7.widget.CardView>