<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                        xmlns:app="http://schemas.android.com/apk/res-auto"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:background="@android:color/white"
                                        android:orientation="vertical"
                                        app:cardCornerRadius="@dimen/dp_5"
>

    <RelativeLayout android:layout_width="@dimen/dp_250"
                    android:layout_height="wrap_content">
        <TextView android:id="@+id/common_dialog_title"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_centerHorizontal="true"
                  android:layout_marginTop="@dimen/dp_21"
                  android:text="确认修改"
                  android:textColor="@color/text_black"
                  android:textSize="@dimen/sp_15"
        />
        <TextView
            android:id="@+id/common_dialog_describe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/common_dialog_title"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_26"
            android:gravity="center"
            android:lineSpacingExtra="@dimen/dp_10"
            android:text="行程时间修改后不得取消此订单 \n您是否确定修改"
            android:textColor="#666666"
            android:textSize="@dimen/sp_15"
        />

        <View android:id="@+id/common_dialog_line"
              android:layout_width="match_parent"
              android:layout_height="@dimen/px_1"
              android:layout_below="@id/common_dialog_describe"
              android:layout_marginTop="@dimen/dp_20"
              android:background="@color/color_969696"
        />
        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="@dimen/dp_45"
                      android:layout_below="@id/common_dialog_line"
                      android:orientation="horizontal"
        >
            <TextView android:layout_width="0dp"
                      android:layout_height="match_parent"
                      android:layout_weight="1"
                      android:gravity="center"
                      android:text="我再想想"
                      android:textSize="@dimen/sp_13"
                      android:textColor="#999999"
                      android:id="@+id/common_dialog_negative"
            />
            <View android:layout_width="@dimen/px_1"
                  android:layout_height="match_parent"
                  android:background="@color/color_969696"
                  android:id="@+id/common_dialog_line2"
            />
            <TextView android:layout_width="0dp"
                      android:layout_height="match_parent"
                      android:layout_weight="1"
                      android:gravity="center"
                      android:text="确定"
                      android:textSize="@dimen/sp_13"
                      android:textColor="@color/colorAccent"
                      android:id="@+id/common_dialog_positive"
            />
        </LinearLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>